<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.faithdeveloper.resume.ui.IntroFragment"
        android:label="intro_screen"
        tools:layout="@layout/intro_screen" >
        <action
            android:id="@+id/action_introFragment_to_fullProfileFragment"
            app:destination="@id/fullProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullProfileFragment"
        android:name="com.faithdeveloper.resume.ui.FullProfileFragment"
        android:label="full_profile"
        tools:layout="@layout/full_profile" />
</navigation>